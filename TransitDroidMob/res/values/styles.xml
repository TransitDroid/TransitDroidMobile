<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@layout/topbar_gradient</item>
    </style>
    
    <style name="ActionBarMenu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@layout/menu_topbar_gradient</item>
    </style>
    
	<style name="LightTabWidget" parent="@android:style/Widget.TabWidget">
	    <item name="android:textColor">@color/tab_indicator_text</item>
	</style>
	
		<style name="BusLineNumber">
		<item name="android:layout_width">77dip</item>
		<item name="android:layout_height">fill_parent</item>
		<!-- 
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_marginLeft">-8dip</item>
		<item name="android:layout_marginRight">5dip</item>
		 -->
		<item name="android:paddingLeft">1dip</item>
		<item name="android:paddingRight">2dip</item>
		
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center_vertical|right</item>
		<item name="android:textSize">40dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

</resources>