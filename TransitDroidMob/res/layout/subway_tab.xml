<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rootRL" 
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                 <include layout="@layout/actionbar_menu" android:id="@+id/actionBarMenu"/>
<ListView
        android:id="@+id/listMenu"
        android:layout_below="@+id/actionBarMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#282828"
        android:dividerHeight="1dip"
        android:background="#3F3F3F"
        android:fadingEdge="none"
        android:listSelector="@drawable/list_selector">

    </ListView>
    
    <RelativeLayout
        android:id="@+id/layoutToMove"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/actionBar"
        android:background="#D8D8D8">
        
        <include layout="@layout/actionbar_layout" android:id="@+id/actionBar"/>
        
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/actionBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="openCloseMenu"
			android:src="@drawable/menu"
			android:background="@android:color/transparent" />

		<Button
		    android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/menuButton"
            android:background="@drawable/custom_button_black" />
				<FrameLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/actionBar"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="10dp"
		    android:background="#F8F8F8" >
<LinearLayout 
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- SUBWAY LINEs -->
    <TextView
        android:id="@+id/subway_line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingLeft="5dp"
        android:text="@string/subway_lines" />

    <include
        android:id="@+id/subway_lines_loading"
        android:layout_width="285dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        layout="@layout/loading_small_layout" />

    <LinearLayout
        android:id="@+id/subway_lines"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:visibility="gone" >
        <include layout="@layout/subway_tab_subway_line_item" />
        <include layout="@layout/subway_tab_subway_line_item" />
        <include layout="@layout/subway_tab_subway_line_item" />
        <include layout="@layout/subway_tab_subway_line_item" />
    </LinearLayout>
    <!-- SUBWAY STATUS -->
    <include layout="@layout/subway_tab_subway_status_title" />
    <ViewStub
        android:id="@+id/subway_status_loading_stub"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:inflatedId="@+id/subway_status_loading"
        android:layout="@layout/loading_layout" />
    <ViewStub
        android:id="@+id/subway_status_stub"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout="@layout/subway_tab_subway_status" />
    <!-- CLOSEST SUBWAY STATIONs -->
    <include layout="@layout/subway_tab_closest_stations_title" />
    <ViewStub
        android:id="@+id/closest_stations_loading_stub"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:inflatedId="@+id/closest_stations_loading"
        android:layout="@layout/loading_layout" />
    <ViewStub
        android:id="@+id/closest_stations_stub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/subway_tab_closest_stations" />
</LinearLayout>
</FrameLayout>
    </RelativeLayout>
    
</RelativeLayout>